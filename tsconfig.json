{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "jsx": "react",

    "baseUrl": ".",
    "outDir": "./dist",

    "strict": true,

    "types": ["react", "react-dom", "jest", "node"],
    "allowSyntheticDefaultImports": true,

    "experimentalDecorators": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "pretty": true,

    "declaration": true,
    "sourceMap": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    ".github",
    ".circleci",
    "dist",
    "coverage",
    "docs",
    "./src/tests"
  ]
}
